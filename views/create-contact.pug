extends ../node_modules/pug-bootstrap/layouts/navbar-fixed

block body

  +navbar("Force.com","navbar", "inverse")
    +nav_item("/") Home
    +nav_item("/assets") Assets
    +nav_item("/cases") Cases
    +nav_item("/accounts") Accounts
    +nav_item("/contacts","active") Contacts
    +nav_item("#") Opportunities
  
  .container
    div(style='padding-bottom:10px;')
 
    div(style='padding:10px;')
     form.form-signin(action="/create-contact", method="post")
      h3 Create Account
      br
      input.input-block-level(type="text", name="firstname", placeholder="First Name", style='margin:10px;')
      br
      input.input-block-level(type="text", name="lastname", placeholder="Last Name", style='margin:10px;') 
      br
      input.input-block-level(type="text", name="phone", placeholder="Phone", style='margin:10px;') 
      br 
      input.input-block-level(type="text", name="email", placeholder="Email", style='margin:10px;') 
      br    
      button.btn.btn-large.btn-primary(type="submit", style='margin:10px;') Create

