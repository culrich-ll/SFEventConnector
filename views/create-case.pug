extends ../node_modules/pug-bootstrap/layouts/navbar-fixed

block body

  +navbar("Force.com","navbar", "inverse")
    +nav_item("/") Home
    +nav_item("/cases","active") Cases
    +nav_item("/accounts") Accounts
    +nav_item("/contacts") Contacts
    +nav_item("#") Opportunities
  
  .container
    div(style='padding-bottom:10px;')
 
    div(style='padding:10px;')
     form.form-signin(action="/publishEvent", method="post")
      h3 Create Case
      br
      input#externalId.input-block-level(type="text", name="externalId", placeholder="Ticket ID", style='margin:10px;', value=externalId)
      br
      input#serialNumber.input-block-level(type="text", name="serialNumber", placeholder="The serial number", style='margin:10px;', value=serialNumber)  
      br
      select#origin.select.form-control.input-lg(style='margin:10px;', name='origin')
          option(value='0', selected= true) -- Select origin --
          option PHONE
          option WEB
          option EMAIL
      br
      input#subject.input-block-level(type="text", name="subject",  placeholder="subject", style='margin:10px;', value=subject)
      br
      input#description.input-block-level(type="text", name="description", placeholder="rich text", style='margin:10px;', value=description)
      br
      select#priority.select.form-control.input-lg(style='margin:10px;', name='priority')
          option(value='0', selected= true) -- Select priority --
          option HIGH
          option MEDIUM
          option LOW
      button.btn.btn-large.btn-primary(type="submit", style='margin:10px;') Create

