extends ../node_modules/pug-bootstrap/layouts/navbar-fixed

block body

  +navbar("Force.com","navbar", "inverse")
    +nav_item("/cases","active") Cases
    +nav_item("/accounts") Accounts
    +nav_item("/contacts") Contacts
    +nav_item("#") Opportunities
  
  .container
    div(style='padding-bottom:10px;')
 
    div(style='padding:10px;')
     form.form-signin(action="/configure", method="post")
      h3 Configuration
      br
      input#clientId.input-block-level(type="text", name="clientId", placeholder="clientId", style='margin:10px;', value=clientId)
      br
      input#clientSecret.input-block-level(type="text", name="clientSecret", placeholder="clientSecret", style='margin:10px;', value=clientSecret)  
      br
      input#redirectUri.input-block-level(type="text", name="redirectUri", placeholder="redirectUri", style='margin:10px;', value=redirectUri) 
      br   
      input#username.input-block-level(type="text", name="username", placeholder="username", style='margin:10px;', value=username) 
      br  
      input#password.input-block-level(type="text", name="password", placeholder="password", style='margin:10px;', value=password) 
      br    
      button.btn.btn-large.btn-primary(type="submit", style='margin:10px;') Apply

