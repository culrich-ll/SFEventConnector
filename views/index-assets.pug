extends ../node_modules/pug-bootstrap/layouts/navbar-fixed

block body
  +navbar("Force.com","navbar", "inverse")
    +nav_item("/") Home
    +nav_item("/assets", "active") Assets
    +nav_item("/cases") Cases
    +nav_item("/accounts") Accounts
    +nav_item("/contacts") Contacts
    +nav_item("#") Opportunities

  .container
    div(style='padding-bottom:10px;')
    ul(id='sfmessage')
    br
    div
      form.form-signin(action="/create-asset", method="get")
         button.btn.btn-large.btn-primary(type="submit", style='margin:1px;') Create asset
      table.table.table-striped.table-hover.span12
        thead
          tr 
            th Id 
            th AccountId
            th Name
            th Description
            th StockKeepingUnit
            th Status
            th SerialNumber

        tbody
          each r in records
            
            tr
             form.form-signin(action="/manage-asset", method="post")
              td
                 input.input-block-level(type="text", 
                                         name="id", 
                                         value=r.get('id'), readonly
                                         )
              td= r.get('Id')
              td= r.get('AccountId')
              td= r.get('Name')
              td= r.get('Description')
              td= r.get('StockKeepingUnit')
              td= r.get('Status')
              td= r.get('SerialNumber')
              td
                button.btn.btn-large.btn-primary(type="submit", name="delete", style='margin:1px;') Del